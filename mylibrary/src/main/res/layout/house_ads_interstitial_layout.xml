<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/houseAds_interstitial_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/houseAds_interstitial_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:adjustViewBounds="true"
        android:contentDescription="@string/interstitial_image" />

    <androidx.cardview.widget.CardView
        android:id="@+id/houseAds_interstitial_button_close_card"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:cardCornerRadius="12.5dp"
        android:layout_margin="12dp"
        app:cardElevation="6dp">

        <ImageButton
            android:id="@+id/houseAds_interstitial_button_close"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/interstitial_cancel_button_shape"
            android:contentDescription="@string/close_button"
            android:src="@drawable/close" />
    </androidx.cardview.widget.CardView>

</RelativeLayout>